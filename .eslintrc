{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": ["error", "windows"],
    "react/require-default-props": [0],
    "react/destructuring-assignment": ["always", {"ignoreClassFields": true}],
    "jsx-a11y/label-has-for": [0]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  }
}
