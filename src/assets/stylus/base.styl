*
  box-sizing border-box

html, body
  margin 0
  padding 0
  set-font('mont', 400) 
  &::-webkit-scrollbar
    width 6px
  &::-webkit-scrollbar-track
    box-shadow inset 0 0 6px rgba(0,0,0,0.3)
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
  &::-webkit-scrollbar-thumb
    background-color $Blue
    outline 1px solid slategrey
    border-radius 3px

img
  max-width 100%

h1, h2, h3, h4, h5, h6
  margin 0
  set-font('rale', 700)

.container
  margin 60px auto 0
  max-width 1180px
  width 95%
