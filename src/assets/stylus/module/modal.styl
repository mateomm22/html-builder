.backdrop,
.modal
  opacity 0
  visibility hidden
  transition()
  &.active
    opacity 1
    visibility visible

.backdrop
  background-color rgba(black, 0.75)
  height 100vh
  left 0
  position fixed
  top 0
  width 100%
  z-index 5

.modal
  display block
  height 100%
  left 0
  position fixed
  top 0
  width 100%
  z-index 10

.modal-body  
  margin 15vh auto
  max-width 650px
  position relative
  .close
    position absolute
    top -15px
    right 0

.modal-content
  background-color white
  padding 15px
  width 100%