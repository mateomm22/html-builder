.template
  background-color #e6e6e6
  .image
    img
      display block
      height 100%
      object-fit cover
      width 100%
  .text
    padding 25px
    p
      font-size .9em
      line-height 1.5
    small,
    span
      display block
  button
    font-size .9em
    margin-top 30px
    min-height 39px
    width 100%

.template-1, .template-3
  max-width 400px
  .image
    height 180px

.template-2
  align-items stretch
  display flex
  max-width 600px
  .image
    flex 0 0 40%
    max-width 40%
  .text
    flex 0 0 60%
    max-width 60%

.template-3
  .title
    padding 15px 25px