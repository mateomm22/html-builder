.grid
  display grid
  make-grid(1)

+media-query(450)
  .grid-4  
    grid-template-columns repeat(2, 1fr)

+media-query('small')
  .grid-3
    grid-template-columns repeat(3, 1fr)

+media-query('medium')
  .grid-2
    grid-template-columns repeat(2, 1fr)
  .grid-4
    grid-template-columns repeat(4, 1fr)
    