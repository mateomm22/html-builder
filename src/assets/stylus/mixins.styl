//Fonts mixins
set-font($family, $weight)
  if $family == 'zilla'
    font-family 'Zilla Slab', serif
  if $family == 'open'
    font-family 'Open Sans', sans-serif
  font-weight $weight
  
//Media queries mixin  
media-query($size)
  if $size == 'small' 
    @media (min-width 550px)
      {block}
  else if $size == 'medium' 
    @media (min-width 768px)
      {block}
  else if $size == 'large' 
    @media (min-width 1024px)
      {block}
  else 
    //this is just for very specific fixes that doesn't match inside any of the above sizes
    @media (min-width unit($size, px))
      {block}

// Transitions
transition(duration=.2s)
  transition-duration duration
  transition-property all
  -moz-transition-timing-function ease-in
