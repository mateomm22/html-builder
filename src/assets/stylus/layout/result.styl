.result
  .container
    padding 50px 0
    .subtitle
      color $Black
      display block
  input,
  textarea
    background-color: $LightGray
    border 1px solid $Gray
    border-radius 3px
    color $Black
    display block
    font-family 'Courier New', Courier, monospace
    font-size .9em
    line-height 1.3
    margin-top 20px
    max-width 700px
    height 45px
    padding 10px
    resize none
    width 100%
  button
    background-color $Blue
    border 0
    border-radius 5px
    color white
    cursor pointer
    margin-top 15px
    padding 10px 15px
    width 120px
    transition()
    &:hover
      background-color lightness($Blue, 35%)
  .msg
    background-color $LightBlue
    color white
    font-size .7em
    left 0
    padding 10px 2.5%
    position absolute
    top 0
    width 100%
    z-index 0
    transition()
    transition-duration .35s
    &.active
      top 60px