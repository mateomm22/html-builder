.result
  overflow hidden
  position relative
  input,
  textarea
    background-color: $LightGray
    border 1px solid $Gray
    border-radius 3px
    color $Black
    display block
    font-family 'Courier New', Courier, monospace
    font-size .9em
    line-height 1.3
    margin-top 20px
    max-width 700px
    height 45px
    padding 10px
    resize none
    width 100%
  .btn
    margin-top 20px
  .msg
    top -60px
    &.active
      top 0