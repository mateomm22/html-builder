.create
  min-height 100vh
  text-align left
  .content
    padding 110px calc(350px + 5%) 50px 5%
    .landing-title
      text-align center
      span
        font-weight 400
        font-size .75em
  .subtitle
    font-weight 700
    margin-bottom: 30px
    span
      color $Blue
      display block
      font-size .9em
      font-weight 400
      margin-top 15px
  .cards
    margin 60px 0
    .grid
      display flex
      margin 30px -15px
  .card-design
    display inline-block
    cursor pointer
    margin 0 15px
    text-align center
    img
      display inline-block
      position relative
      max-width 150px
      width 100%
      transition()
    .wide
      max-width 300px
    &:focus
      outline none
    &.active
      img
        border 3px solid $Blue
        box-shadow 0 1px 6px $Blue
  // Program info form
  .form
    background-color $Gray
    height calc(100vh - 60px)
    max-width 350px
    overflow auto
    padding 30px 15px
    position fixed
    right 0
    top 60px
    &::-webkit-scrollbar
      width 4px
    &::-webkit-scrollbar-track
      box-shadow inset 0 0 6px rgba(0,0,0,0.3)
    &::-webkit-scrollbar-thumb
      background-color #999
      outline 1px solid slategrey
      border-radius 1px
    h6
      color $Blue
      font-size 1.2em
  form
    margin-top 30px
    width 100%
    label
      display block
      margin-bottom 15px
      font-size .9em
      position relative
      span
        color $Black
        display block
        font-style italic
        font-size .8em
    input,
    textarea
      border 1px solid #ccc
      border-radius 5px
      display block
      height 35px
      padding 0 5px
      width 100%
      set-font('mont', 400)
    textarea
      height 100px
      padding 5px
      resize none
    small
      bottom 5px
      font-size .7em
      color $Black
      position absolute
      right 7px
    .controls
      padding 20px 0 0
    .add
      color $Blue
      cursor pointer
      font-weight 700
      margin-left 15px
      position relative
      &:after
        bottom -3px
        background-color $Blue
        content ''
        height 2px
        left 0
        position absolute
        width 0
        transition()
      &:hover
        &:after
          width 100%